<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CRUDActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar_recipe_crud"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/btn_crud_back"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_recipe_crud"
            app:layout_constraintStart_toStartOf="@+id/toolbar_recipe_crud"
            app:layout_constraintTop_toTopOf="@+id/toolbar_recipe_crud"
            android:padding="8dp"
            android:layout_marginStart="8dp"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_recipe_crud">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/et_recipe_name"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:hint="Nombre de la receta"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <View
                        android:id="@+id/divider6"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_recipe_name"
                        android:layout_marginTop="16dp"/>

                <Spinner
                        android:id="@+id/spn_crud_categories"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider6"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:spinnerMode="dropdown"/>

                <View
                        android:id="@+id/divider7"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintTop_toBottomOf="@+id/spn_crud_categories"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_private"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="64dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider7"
                        android:layout_marginTop="16dp"
                        android:text="Privada"
                        />
                <!--android:checked="true"-->

                <RadioButton
                        android:text="Pública"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_public"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="64dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider7"
                        android:layout_marginTop="16dp"/>

                <View
                        android:id="@+id/divider3"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rb_private"
                        android:layout_marginTop="16dp"/>

                <TextView
                        android:text="Tiempo estimado para la preparación"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider3"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"/>

                <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/et_minutes"
                        android:hint="Minutos"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        android:layout_marginEnd="64dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textAlignment="center"/>

                <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/et_hours"
                        android:hint="Horas"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        android:layout_marginStart="64dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textAlignment="center"/>

                <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_minutes"
                        android:layout_marginTop="16dp"/>

                <android.support.v7.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/rw_ingredient"
                        app:layout_constraintTop_toBottomOf="@+id/divider"
                        android:layout_marginTop="16dp"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/et_ingredient"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:hint="Ingredientes"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/rw_ingredient"
                        app:layout_constraintEnd_toStartOf="@+id/btn_add_ingredient"/>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        android:id="@+id/btn_add_ingredient"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/rw_ingredient"
                        android:elevation="1dp"/>

                <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_ingredient"
                        android:layout_marginTop="16dp"/>

                <TextView
                        app:layout_constraintTop_toBottomOf="@+id/divider2"
                        android:text="Preparación"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginTop="16dp"/>

                <EditText
                        android:id="@+id/et_preparation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"/>

                <View
                        android:id="@+id/divider4"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintTop_toBottomOf="@+id/et_preparation"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                        android:id="@+id/imageView_I"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider4"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_del_imageView_I"
                        android:backgroundTint="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="@+id/imageView_I"
                        android:visibility="invisible"
                        android:src="@drawable/ic_clear_black_24dp"
                        app:layout_constraintEnd_toEndOf="@+id/imageView_I"
                        />

                <ImageView
                        android:id="@+id/imageView_II"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_I"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_clear_black_24dp"
                        android:id="@+id/btn_del_imageView_II"
                        android:backgroundTint="@android:color/transparent"
                        android:visibility="invisible"
                        app:layout_constraintTop_toTopOf="@+id/imageView_II"
                        app:layout_constraintEnd_toEndOf="@+id/imageView_II"/>

                <ImageView
                        android:id="@+id/imageView_III"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_II"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_clear_black_24dp"
                        android:id="@+id/btn_del_imageView_III"
                        android:backgroundTint="@android:color/transparent"
                        android:visibility="invisible"
                        app:layout_constraintTop_toTopOf="@+id/imageView_III"
                        app:layout_constraintEnd_toEndOf="@+id/imageView_III"/>

                <ImageView
                        android:id="@+id/imageView_IV"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_III"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_clear_black_24dp"
                        android:id="@+id/btn_del_imageView_IV"
                        android:backgroundTint="@android:color/transparent"
                        android:visibility="invisible"
                        app:layout_constraintTop_toTopOf="@+id/imageView_IV"
                        app:layout_constraintEnd_toEndOf="@+id/imageView_IV"/>

                <View
                        android:id="@+id/divider5"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        android:background="?android:attr/listDivider"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_IV"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <Button
                        android:id="@+id/btn_crud_save"
                        android:text="guardar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/divider5"
                        android:layout_marginTop="16dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"/>

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>