<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ProfileFragment"
        android:id="@+id/frameLayout">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar_perfil"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="invisible"/>

    <ImageButton
            android:src="@drawable/ic_more_vert_profile_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton_threeDots"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar_perfil"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_perfil"
            android:layout_marginTop="8dp"
            android:elevation="10dp"/>

    <ImageView
            android:src="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/sub_toolbar_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/toolbar_perfil"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_perfil"/>

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/toolbar_perfil"
            app:layout_constraintBottom_toTopOf="@+id/rv_user_recipes"
            android:clickable="false"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="0dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false"
            app:cardElevation="8dp"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:cardMaxElevation="8dp"/>

    <ImageView

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#32BBADAD"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/egg"
            android:elevation="9dp"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:id="@+id/tv_nombre"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/whiteBackground"
            android:textStyle="bold"
            android:elevation="9dp"/>

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/rv_user_recipes"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre"
            android:background="@color/greyBackground"
            android:elevation="-1dp"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_new_recipe"
            android:src="@drawable/ic_fab_add_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:backgroundTint="@color/colorAccent"
            android:focusable="true"
            app:rippleColor="@color/colorPrimary"
            android:elevation="5dp"/>

</android.support.constraint.ConstraintLayout>