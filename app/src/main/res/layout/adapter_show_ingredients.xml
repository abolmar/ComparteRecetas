<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_count_ingredient"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_lens_black_24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/tv_show_ingredient"
            tools:ignore="ContentDescription"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_show_ingredient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/tv_count_ingredient"
            android:paddingBottom="8dp"
            android:layout_marginEnd="16dp"/>

</android.support.constraint.ConstraintLayout>