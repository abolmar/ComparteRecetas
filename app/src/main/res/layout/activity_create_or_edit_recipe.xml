<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateOrEditRecipeActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar_recipe_crud"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="8dp"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp"
            android:id="@+id/btn_crud_back"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_recipe_crud"
            app:layout_constraintStart_toStartOf="@+id/toolbar_recipe_crud"
            app:layout_constraintTop_toTopOf="@+id/toolbar_recipe_crud"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:elevation="9dp"
            tools:ignore="ContentDescription"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tv_create_or_edit_recipe"
            app:layout_constraintEnd_toEndOf="@+id/toolbar_recipe_crud"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/btn_crud_back"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar_recipe_crud"
            android:layout_marginBottom="8dp"
            android:gravity="center|start"
            android:textColor="@color/whiteBackground"
            android:textSize="20sp"
            android:elevation="9dp"
            android:textStyle="bold"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar_recipe_crud"
            android:background="@color/whiteBackground">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapSentences"
                        android:ems="10"
                        android:id="@+id/et_recipe_name"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:hint="@string/addRecipeName"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/recipeContent"/>

                <View
                        android:id="@+id/divider6"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimaryDark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_recipe_name"
                        android:layout_marginTop="16dp"/>

                <Spinner
                        android:id="@+id/spn_crud_categories"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/divider6"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:spinnerMode="dropdown"/>

                <View
                        android:id="@+id/divider7"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimaryDark"
                        app:layout_constraintTop_toBottomOf="@+id/spn_crud_categories"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_private"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="64dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider7"
                        android:layout_marginTop="16dp"
                        android:text="@string/radioButtonPrivate"
                        android:textColor="@color/blackLetters"
                        android:textSize="18sp"/>

                <RadioButton
                        android:text="@string/radioButtonPublic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rb_public"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="64dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider7"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/blackLetters"
                        android:textSize="18sp"/>

                <View
                        android:id="@+id/divider3"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimaryDark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/rb_private"
                        android:layout_marginTop="16dp"/>

                <TextView
                        android:text="@string/timeOfPreparation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider3"
                        android:layout_marginTop="16dp"
                        android:textAlignment="center"
                        android:textColor="@color/blackLetters"
                        android:textSize="18sp"/>

                <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/et_minutes"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        android:textAlignment="center"
                        android:textColor="@color/recipeContent"
                        android:maxLength="2"
                        app:layout_constraintEnd_toStartOf="@+id/textView10"/>

                <TextView
                        android:text="minutos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        app:layout_constraintBottom_toBottomOf="@+id/et_minutes"
                        app:layout_constraintTop_toTopOf="@+id/et_minutes"
                        android:textSize="18sp"
                        android:textColor="@color/blackLetters"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="64dp"/>

                <EditText
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/et_hours"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView2"
                        android:layout_marginStart="64dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textAlignment="center"
                        android:textColor="@color/recipeContent"
                        android:maxLength="2"/>

                <TextView
                        android:text="horas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView9"
                        app:layout_constraintStart_toEndOf="@+id/et_hours"
                        app:layout_constraintBottom_toBottomOf="@+id/et_hours"
                        app:layout_constraintTop_toTopOf="@+id/et_hours"
                        android:textColor="@color/blackLetters"
                        android:textSize="18sp"/>

                <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimaryDark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_minutes"
                        android:layout_marginTop="16dp"/>

                <TextView
                        android:text="@string/ingredientsFor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_ingredientsFor"
                        app:layout_constraintTop_toBottomOf="@+id/divider"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:textSize="18sp"
                        android:textColor="@color/blackLetters"
                        android:textAlignment="center"/>

                <EditText
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/et_numberPeople"
                        android:textAlignment="center"
                        app:layout_constraintStart_toEndOf="@+id/tv_ingredientsFor"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@+id/tv_ingredientsFor"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_ingredientsFor"
                        android:maxLength="3"
                        android:textColor="@color/recipeContent"/>

                <TextView
                        android:text="personas."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        app:layout_constraintStart_toEndOf="@+id/et_numberPeople"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/et_numberPeople"
                        app:layout_constraintTop_toTopOf="@+id/et_numberPeople"
                        android:textSize="18sp"
                        android:textColor="@color/blackLetters"/>

                <View
                        android:id="@+id/divider11"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimaryDark"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/et_numberPeople"/>

                <android.support.v7.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/rw_ingredient"
                        app:layout_constraintTop_toBottomOf="@+id/divider11"
                        android:layout_marginTop="16dp"/>

                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapSentences"
                        android:ems="10"
                        android:id="@+id/et_ingredient"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:hint="@string/addingredients"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/rw_ingredient"
                        app:layout_constraintEnd_toStartOf="@+id/btn_add_ingredient"/>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_add_black_24dp"
                        android:id="@+id/btn_add_ingredient"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/rw_ingredient"
                        android:elevation="1dp"
                        tools:ignore="ContentDescription"/>

                <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimaryDark"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_ingredient"
                        android:layout_marginTop="16dp"/>

                <TextView
                        app:layout_constraintTop_toBottomOf="@+id/divider2"
                        android:text="@string/preparation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/blackLetters"
                        android:textSize="18sp"/>

                <EditText
                        android:id="@+id/et_preparation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine|textCapSentences"
                        android:ems="10"
                        app:layout_constraintTop_toBottomOf="@+id/textView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/recipeContent"
                        />

                <View
                        android:id="@+id/divider4"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimaryDark"
                        app:layout_constraintTop_toBottomOf="@+id/et_preparation"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                        android:id="@+id/imageView_I"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider4"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        tools:ignore="ContentDescription"/>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_del_imageView_I"
                        android:backgroundTint="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="@+id/imageView_I"
                        android:visibility="invisible"
                        android:src="@drawable/ic_clear_black_24dp"
                        app:layout_constraintEnd_toEndOf="@+id/imageView_I"
                        tools:ignore="ContentDescription"/>

                <ImageView
                        android:id="@+id/imageView_II"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_I"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        tools:ignore="ContentDescription"/>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_clear_black_24dp"
                        android:id="@+id/btn_del_imageView_II"
                        android:backgroundTint="@android:color/transparent"
                        android:visibility="invisible"
                        app:layout_constraintTop_toTopOf="@+id/imageView_II"
                        app:layout_constraintEnd_toEndOf="@+id/imageView_II"
                        tools:ignore="ContentDescription"/>

                <ImageView
                        android:id="@+id/imageView_III"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_II"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        tools:ignore="ContentDescription"/>

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_clear_black_24dp"
                        android:id="@+id/btn_del_imageView_III"
                        android:backgroundTint="@android:color/transparent"
                        android:visibility="invisible"
                        app:layout_constraintTop_toTopOf="@+id/imageView_III"
                        app:layout_constraintEnd_toEndOf="@+id/imageView_III"
                        tools:ignore="ContentDescription"/>

                <ImageView
                        android:id="@+id/imageView_IV"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/ic_add_a_photo_black_24dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_III"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        tools:ignore="ContentDescription"/>

                <ImageButton
                        tools:ignore="ContentDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_clear_black_24dp"
                        android:id="@+id/btn_del_imageView_IV"
                        android:backgroundTint="@android:color/transparent"
                        android:visibility="invisible"
                        app:layout_constraintTop_toTopOf="@+id/imageView_IV"
                        app:layout_constraintEnd_toEndOf="@+id/imageView_IV"/>

                <View
                        android:id="@+id/divider5"
                        android:layout_width="0dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colorPrimaryDark"
                        app:layout_constraintTop_toBottomOf="@+id/imageView_IV"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="gone"/>

                <Button
                        android:id="@+id/btn_crud_save"
                        android:text="@string/saveProfile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/divider5"
                        android:layout_marginTop="32dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/whiteBackground"
                        android:background="@drawable/rounded_corner"
                        />

            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>