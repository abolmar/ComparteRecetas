<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.FavoritesFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/greyBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.v7.widget.CardView
                    android:id="@+id/btn_lunch_recipes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:src="@color/lunch"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/lunch_back"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/divider16"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                            android:src="@drawable/lunch"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:id="@+id/lunch_logo"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="32dp"/>

                    <View
                            android:id="@+id/divider16"
                            android:layout_width="0.5dp"
                            android:layout_height="0dp"
                            android:background="@color/colorPrimaryDark"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/lunch_logo"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            android:visibility="invisible"/>

                    <ImageView
                            android:src="@drawable/chevron_right_grey"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/lunch_next"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                            android:text="@string/lunch"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/tv_lunch_recipes"
                            android:gravity="center|start"
                            android:textColor="@color/blackLetters"
                            android:textSize="30sp"
                            android:paddingEnd="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toTopOf="@+id/lunch_logo"
                            app:layout_constraintBottom_toBottomOf="@+id/lunch_logo"
                            android:paddingStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/divider16"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/open_sans_light"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/btn_dinner_recipes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:src="@color/dinner"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/dinner_back"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/divider17"
                            app:layout_constraintStart_toStartOf="parent"
                            />

                    <ImageView
                            android:src="@drawable/dinner"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:id="@+id/dinner_logo"
                            android:layout_marginStart="32dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <View
                            android:id="@+id/divider17"
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            app:layout_constraintStart_toEndOf="@+id/dinner_logo"
                            android:layout_marginStart="32dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:visibility="invisible"/>

                    <ImageView
                            android:src="@drawable/chevron_right_grey"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/dinner_next"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                            android:text="@string/dinner"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/tv_dinner_recipes"
                            android:textColor="@color/blackLetters"
                            android:textSize="30sp"
                            android:gravity="center|start"
                            android:paddingEnd="16dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/dinner_logo"
                            app:layout_constraintBottom_toBottomOf="@+id/dinner_logo"
                            android:paddingStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/divider17"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/open_sans_light"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/btn_afternoonSnack_recipes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:src="@color/afternoonSnack"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/afternoonSnack_back"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/divider18"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                            android:src="@drawable/afternoon_snack"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:id="@+id/afternoonSnack_logo"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="32dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <View
                            android:id="@+id/divider18"
                            android:layout_width="0.5dp"
                            android:layout_height="0dp"
                            android:background="@color/colorPrimaryDark"
                            app:layout_constraintStart_toEndOf="@+id/afternoonSnack_logo"
                            android:layout_marginStart="32dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            android:visibility="invisible"/>

                    <ImageView
                            android:src="@drawable/chevron_right_grey"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/afternoonSnack_next"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"/>

                    <TextView
                            android:text="@string/afternoonSnack"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/tv_afternoonSnack_recipes"
                            android:textColor="@color/blackLetters"
                            android:textSize="30sp"
                            android:gravity="center|start"
                            android:paddingEnd="16dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/afternoonSnack_logo"
                            app:layout_constraintTop_toTopOf="@+id/afternoonSnack_logo"
                            android:paddingStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/divider18"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/open_sans_light"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/btn_dessert_recipes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:src="@color/dessert"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/dessert_back"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/divider15"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                            android:src="@drawable/dessert"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:id="@+id/dessert_logo"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>

                    <View
                            android:id="@+id/divider15"
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            app:layout_constraintStart_toEndOf="@+id/dessert_logo"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:visibility="invisible"/>

                    <ImageView
                            android:src="@drawable/chevron_right_grey"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/dessert_next"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                            android:text="@string/dessert"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/tv_dessert_recipes"
                            android:textColor="@color/blackLetters"
                            android:textSize="30sp"
                            android:gravity="center|start"
                            android:paddingEnd="16dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:paddingStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/divider15"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="16dp"
                            android:fontFamily="@font/open_sans_light"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"/>
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:id="@+id/btn_all_recipes"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:src="@color/all"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/allRecipes_back"
                            app:layout_constraintEnd_toStartOf="@+id/divider10"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                            android:src="@drawable/all_recipes"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:id="@+id/allRecipes_logo"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="32dp"/>

                    <View
                            android:id="@+id/divider10"
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorPrimaryDark"
                            app:layout_constraintStart_toEndOf="@+id/allRecipes_logo"
                            android:layout_marginStart="32dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:visibility="invisible"/>

                    <ImageView
                            android:src="@drawable/chevron_right_grey"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:id="@+id/allRecipes_next"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                            android:text="@string/allRecipes"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/tv_all_recipes"
                            android:layout_weight="1"
                            android:textColor="@color/blackLetters"
                            android:textSize="30sp"
                            android:gravity="center|start"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:paddingEnd="16dp"
                            android:paddingStart="16dp"
                            app:layout_constraintStart_toEndOf="@+id/divider10"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:fontFamily="@font/open_sans_light"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>