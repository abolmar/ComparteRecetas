<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginBottom="0dp"
                                             android:layout_marginTop="4dp"
                                             android:layout_marginEnd="0dp"
                                             android:layout_marginStart="0dp"
                                             android:id="@+id/all_recipes_container">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/cv_all_recipes">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:id="@+id/img_adapter_all_recipe_user"
                    android:src="@drawable/egg"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_adapter_all_recipe_name"
                    app:layout_constraintTop_toTopOf="@+id/tv_adapter_all_recipe_name"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_adapter_all_recipe_name"
                    app:layout_constraintStart_toEndOf="@+id/img_adapter_all_recipe_user"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/img_adapter_all_recipe_main"/>

            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_thumb_up_black_24dp"
                    android:id="@+id/img_adapter_all_recipe_positive"
                    app:layout_constraintTop_toBottomOf="@+id/tv_adapter_all_recipe_name"
                    app:layout_constraintStart_toEndOf="@+id/img_adapter_all_recipe_user"
                    android:layout_marginStart="8dp"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="16dp"/>

            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_thumb_down_black_24dp"
                    android:id="@+id/img_adapter_all_recipe_negative"
                    app:layout_constraintTop_toBottomOf="@+id/tv_adapter_all_recipe_name"
                    app:layout_constraintStart_toEndOf="@+id/img_adapter_all_recipe_positive"
                    android:layout_marginStart="32dp"
                    android:padding="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    android:text="120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_adapter_all_recipe_positive"
                    app:layout_constraintTop_toTopOf="@+id/img_adapter_all_recipe_positive"
                    app:layout_constraintBottom_toBottomOf="@+id/img_adapter_all_recipe_positive"
                    app:layout_constraintStart_toEndOf="@+id/img_adapter_all_recipe_positive"
                    />

            <TextView
                    android:text="120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_adapter_all_recipe_negative"
                    app:layout_constraintTop_toTopOf="@+id/img_adapter_all_recipe_negative"
                    app:layout_constraintBottom_toBottomOf="@+id/img_adapter_all_recipe_negative"
                    app:layout_constraintStart_toEndOf="@+id/img_adapter_all_recipe_negative"
                    />

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:id="@+id/img_adapter_all_recipe_main"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            <View
                    android:id="@+id/divider8"
                    android:layout_width="395dp"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
