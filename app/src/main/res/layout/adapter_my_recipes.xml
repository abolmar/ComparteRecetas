<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginBottom="4dp"
                                             android:layout_marginTop="4dp"
                                             android:layout_marginEnd="16dp"
                                             android:layout_marginStart="16dp">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/cv_my_recipes">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:id="@+id/img_adapter_recipe_user"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@mipmap/huevo"
                    android:layout_marginTop="8dp"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_adapter_recipe_name"
                    app:layout_constraintStart_toEndOf="@+id/img_adapter_recipe_user"
                    app:layout_constraintEnd_toStartOf="@+id/btn_adapter_recipe_menu"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_adapter_recipe_menu"
                    app:layout_constraintTop_toTopOf="@+id/btn_adapter_recipe_menu"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"/>

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_thumb_up_black_24dp"
                    android:id="@+id/img_adapter_recipe_positive"
                    app:layout_constraintTop_toBottomOf="@+id/tv_adapter_recipe_name"
                    app:layout_constraintStart_toEndOf="@+id/img_adapter_recipe_user"
                    android:layout_marginStart="8dp"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"/>

            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/ic_thumb_down_black_24dp"
                    android:id="@+id/img_adapter_recipe_negative"
                    app:layout_constraintTop_toBottomOf="@+id/tv_adapter_recipe_name"
                    app:layout_constraintStart_toEndOf="@+id/img_adapter_recipe_positive"
                    android:layout_marginStart="32dp"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    android:text="120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_adapter_recipe_positive"
                    app:layout_constraintTop_toTopOf="@+id/img_adapter_recipe_positive"
                    app:layout_constraintBottom_toBottomOf="@+id/img_adapter_recipe_positive"
                    app:layout_constraintStart_toEndOf="@+id/img_adapter_recipe_positive"
                    />

            <TextView
                    android:text="120"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_adapter_recipe_negative"
                    app:layout_constraintTop_toTopOf="@+id/img_adapter_recipe_negative"
                    app:layout_constraintBottom_toBottomOf="@+id/img_adapter_recipe_negative"
                    app:layout_constraintStart_toEndOf="@+id/img_adapter_recipe_negative"
                    />

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_more_vert_black_24dp"
                    android:id="@+id/btn_adapter_recipe_menu"
                    android:background="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_lock_outline_black_24dp"
                    android:id="@+id/img_adapter_recipe_type"
                    android:paddingTop="5dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_adapter_recipe_name"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toStartOf="@+id/btn_adapter_recipe_menu"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>